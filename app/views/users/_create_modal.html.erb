<div class='modal fade' id='myModal' role='dialog'>
  <div class='modal-dialog'>
  
    <!-- Modal content-->
    <div class='modal-content'>
      <div class='modal-header'>
        <button type='button' class='close' data-dismiss='modal'>&times;</button>
        <h4 class='modal-title'>Modal Header</h4>
      </div>
      <div class='modal-body'>
        <p>Some text in the modal.</p>
        <%appointment = current_user.student_appointments.new()%>
        <%= bootstrap_form_for(appointment, :url=>request_appointment_path, action: 'request_app') do |f| %>
        	<% if appointment.errors.any? %>
        	  <div id="error_explanation">
        	    <h2><%= pluralize(appointment.errors.count, "error") %> prohibited this appointment from being saved:</h2>

        	    <ul>
        	    <% appointment.errors.full_messages.each do |message| %>
        	      <li><%= message %></li>
        	    <% end %>
        	    </ul>
        	  </div>
        	<% end %>
            <%= f.number_field :course_id %>
            <%= f.number_field :student_id, :default=>current_user.first_name, :value=> current_user.first_name%>
            <%= f.number_field :ta_id %>
            <%byebug%>
            <%t = params[:hours].split(":")%>

            <% if params[:hours].include? "PM"%>
            	<%if t[0].to_i == 12%>
	            	<%= f.datetime_select :start, :default => {hour:t[0].to_i, minute: t[1][0..1].to_i}, ampm: true%>
	            <%else%>
	            	<%= f.datetime_select :start, :default => {hour:t[0].to_i+12, minute: t[1][0..1].to_i}, ampm: true%>
	            <% end %>
            <%else%>
            	<%= f.datetime_select :start, :default => {hour:t[0].to_i, minute:t[1][0..1].to_i}, ampm: true%>
            <%end%>
        <% end %>
      </div>
      <div class='modal-footer'>
        <button type='button' class='btn btn-default' data-dismiss='modal'>Close</button>
      </div>
    </div>
    
  </div>
</div>