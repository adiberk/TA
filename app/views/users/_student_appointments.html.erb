<%userstudent = current_user.student_appointments%>
        <!-- Boxes de Acoes -->
<div class="col-sm-6">
	<div class="box">
		<div class="icon">
			<div class="image"><i class="fa fa-check-square-o"></i></div>
			<div class="info">
				<h3 class="title">Confirmed Appointments</h3>
        <p style="list-style-type:none">
        <% if (userstudent.where(confirmed: true).size > 0)%>
          <%userstudent.each do |app|%>
            <%if app.confirmed == true && app.start> Time.now%>
              <p>Appointment between <%=User.find(app.ta_id).first_name%> and <%=User.find(app.student_id).first_name%> for course: <%=Course.find(app.course_id).name%> Time: <%=app.start%> - <%=app.end%>
              </p>
            <%end%>
          <%end%>
        <% else %>
          <p>No confirmed appointments</p>
        <% end %>
        </p>

			</div>
		</div>
		<div class="space"></div>
	</div>
</div>

<div class="col-sm-6">
	<div class="box">
		<div class="icon">
		    <div class="image"><i class="fa fa-square-o"></i></div>
			<div class="info">
					<h3 class="title">Unconfirmed Appointments</h3>
          <p>
            <% if userstudent.where(confirmed: false).size > 0%>
               <%#= get_appointment()%>
               <%#userstudent = current_user.ta_appointments%>
               <%userstudent.each do |app|%>
                <%if app.confirmed == false && app.start > Time.now%>
                  <p>Appointment between <%=User.find(app.ta_id).first_name%> and <%=User.find(app.student_id).first_name%> for course: <%=Course.find(app.course_id).name%> Time: <%=app.start%> - <%=app.end%>
                  </p>
                <% end %>
              <%end%>

            <% else %>
              <p>No unconfirmed appointments at this time</p>
            <% end %>
          </p>

			</div>
		<div class="space"></div>
	</div>
</div>
</div>
