
<h1> Chat Rooms </h1>
<p class="lead"><%= link_to 'New chat room', new_chat_room_path, class: 'btn btn-primary' %></p>

<% if @chat_rooms.count == 0 %>
	No existing chat rooms to show.
<% else %>
	<table>
	  <thead>
	    <tr>
	      <th> Title </th>
	      <th> </th>
	    </tr>
	  </thead>
	  <tbody>
	    <% @chat_rooms.each do |room| %>
	      <tr>
	        <td><%= link_to "#{room.title}", chat_room_path(room) %></td>
	        <td><%= link_to 'Destroy', @chat_room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
	      </tr>
	    <% end %>
	  </tbody>
	</table>
<% end %>