<h1><%= @chat_room.title %></h1>


<div class="chatcontent">

	<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
	  <%= render @chat_room.messages %>
	</div>

	<hr>
</div>


<%= form_for @message, :remote => true, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group">
    <%= f.label :body %>
  	<%= f.text_field :body, class: "chatboxtextarea" %>

    <small class="text-muted">1000 character Limit</small>
  
  </div>
<% end %>


