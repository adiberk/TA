
<div class="chatroom">
<h1><%= @chat_room.title %></h1>

<div class="chatcontent">

	<div id="messages" data-chat-room-id="<%= @chat_room.id %>">
	  <%= render @chat_room.messages %>
	</div>

	<hr>
</div>


<%= form_for @message, :remote => true, url: '#' do |f| %>
  <%= hidden_field_tag 'chat_room_id', @chat_room.id %>
  <div class="form-group">
   
  	<%= f.text_field :body, :placeholder => 'Enter text here', class: "chatboxtextarea" %>
  	<br>
    <small class="text-muted"> &nbsp;1000 character Limit</small>
  
  </div>
<% end %>

</div>

<script>
	<!-- #updateScroll() -->
	function updateScroll(){
	    var element = document.getElementById("yourDivID");
	    element.scrollTop = element.scrollHeight;
	}
</script>

