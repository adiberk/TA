
<div class="row jumbo-row center jumbotron home-image divedge">
<div class="border-form-div">

  <h2>Log in</h2>

  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= f.email_field :email, :autofocus => true, :placeholder => 'Email address' %>
    <%= f.password_field :password, :placeholder => 'Password' %>
    <% if devise_mapping.rememberable? -%> 
      <%= f.form_group :remember_me, style:"margin-left: -20px;" do %>
        <%= f.check_box :remember_me, label: "Remember Me"%>
      <% end %>
    <% end -%>
    <%= f.submit "Login",:class=>'btn btn-primary'%>
  <% end %>

  <%= render "devise/shared/links" %>

</div>
</div>