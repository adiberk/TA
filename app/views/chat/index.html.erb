
<link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">




<h1> <%= current_user.first_name %> </h1>
<div class="row">

  <div class="col-md-3">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3 class="panel-title">Chat Rooms</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li><%= button_to user.first_name, conversations_path(user_id: user), remote: true, method: :post, class: 'chatlist center' %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>



  <div class="col-md-6">
    <ul id="conversations-list">
      <% @conversations.each do |conversation| %>
        <%= render 'conversations/conversation', conversation: conversation, user: current_user %>
      <% end %>
    </ul>
  </div>

</div>
